#!/bin/sh
xinput set-prop 'SynPS/2 Synaptics TouchPad' 'libinput Tapping Enabled' 1 # tap to click
xinput set-prop 'SynPS/2 Synaptics TouchPad' 'libinput Accel Speed' 0.1 # mouse accel
xinput set-prop 'SynPS/2 Synaptics TouchPad' 'libinput Disable While Typing Enabled' 0 # enable touchpad while key pressed

