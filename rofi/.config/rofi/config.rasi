* {
	background-color: #333;	
	text-color: white;
}

window {
	font: "curie 12";
	width: 20%;
	location: center;
	anchor: center;
}

mainbox {
	padding: 16px;
	spacing: 8px;
}

inputbar {
	children: [ prompt, textbox-colon, entry ];
}

textbox-colon {
	expand: false;
	str: ":";
	margin: 0 1ch 0 0;
}

listview {
	fixed-height: true;
	lines: 8;
}

element {
	padding: 8px;
}

element selected {
	background-color: #888;
}

