#!/bin/bash

RED="\[\e[31m\]"
GREEN="\[\e[32m\]"
CYAN="\[\e[34m\]"
RESET="\[\e[39m\]"

function git_status () {
  git_status="$(git status 2> /dev/null)"
}

function virtualenv_info () {
  test $VIRTUAL_ENV && echo "(`basename $VIRTUAL_ENV`) "
}

function set_prompt () {
  PS1="`virtualenv_info`${CYAN}\W \$ ${RESET}"
}

PROMPT_COMMAND=set_prompt
